<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lusifer.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="My Nanodegree Apps!"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/bSpotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:background="@color/buttoncolor"
        android:text="Spotify Streamer"
        />

    <Button
        android:id="@+id/bScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bSpotify"
        android:layout_alignLeft="@+id/bSpotify"
        android:layout_alignRight="@+id/bSpotify"
        android:layout_alignStart="@+id/bSpotify"
        android:layout_below="@+id/bSpotify"
        android:layout_marginTop="10dp"
        android:background="@color/buttoncolor"
        android:text="Scores App"/>

    <Button
        android:id="@+id/bLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bScore"
        android:layout_alignLeft="@+id/bScore"
        android:layout_alignRight="@+id/bScore"
        android:layout_alignStart="@+id/bScore"
        android:layout_below="@+id/bScore"
        android:layout_marginTop="10dp"
        android:background="@color/buttoncolor"
        android:text="Library App"/>

    <Button
        android:id="@+id/bBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bLibrary"
        android:layout_alignLeft="@+id/bLibrary"
        android:layout_alignRight="@+id/bLibrary"
        android:layout_alignStart="@+id/bLibrary"
        android:layout_below="@+id/bLibrary"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@color/buttoncolor"
        android:text="Build It Bigger"/>

    <Button
        android:id="@+id/bXYZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bBuild"
        android:layout_alignLeft="@+id/bBuild"
        android:layout_alignRight="@+id/bBuild"
        android:layout_alignStart="@+id/bBuild"
        android:layout_below="@+id/bBuild"
        android:layout_marginTop="10dp"
        android:background="@color/buttoncolor"
        android:text="XYZ Reader"/>

    <Button
        android:id="@+id/bCapstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bXYZ"
        android:layout_alignLeft="@+id/bXYZ"
        android:layout_alignRight="@+id/bXYZ"
        android:layout_alignStart="@+id/bXYZ"
        android:layout_below="@+id/bXYZ"
        android:layout_marginTop="10dp"
        android:background="@color/finalButtoncolor"
        android:text="Capstone : My own App"/>
</RelativeLayout>
